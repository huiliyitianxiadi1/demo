<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.BankChoiceDao">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.BankChoice">
        <!--@Table bank_choice-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="subject" column="subject" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="a" column="A" jdbcType="VARCHAR"/>
        <result property="b" column="B" jdbcType="VARCHAR"/>
        <result property="c" column="C" jdbcType="VARCHAR"/>
        <result property="d" column="D" jdbcType="VARCHAR"/>
        <result property="answer" column="answer" jdbcType="VARCHAR"/>
        <result property="teacherid" column="teacherid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, subject, title, A, B, C, D, answer, teacherid
        from graduation.bank_choice
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, subject, title, A, B, C, D, answer, teacherid
        from graduation.bank_choice
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, subject, title, A, B, C, D, answer, teacherid
        from graduation.bank_choice
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="subject != null and subject != ''">
                and subject = #{subject}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="a != null and a != ''">
                and A = #{a}
            </if>
            <if test="b != null and b != ''">
                and B = #{b}
            </if>
            <if test="c != null and c != ''">
                and C = #{c}
            </if>
            <if test="d != null and d != ''">
                and D = #{d}
            </if>
            <if test="answer != null and answer != ''">
                and answer = #{answer}
            </if>
            <if test="teacherid != null">
                and teacherid = #{teacherid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into graduation.bank_choice(subject, title, A, B, C, D, answer, teacherid)
        values (#{subject}, #{title}, #{a}, #{b}, #{c}, #{d}, #{answer}, #{teacherid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update graduation.bank_choice
        <set>
            <if test="subject != null and subject != ''">
                subject = #{subject},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="a != null and a != ''">
                A = #{a},
            </if>
            <if test="b != null and b != ''">
                B = #{b},
            </if>
            <if test="c != null and c != ''">
                C = #{c},
            </if>
            <if test="d != null and d != ''">
                D = #{d},
            </if>
            <if test="answer != null and answer != ''">
                answer = #{answer},
            </if>
            <if test="teacherid != null">
                teacherid = #{teacherid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from graduation.bank_choice where id = #{id}
    </delete>

</mapper>