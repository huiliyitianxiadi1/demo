<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.BankSubjectiveDao">

    <resultMap id="BaseResultMap" type="com.example.demo.entity.BankSubjective">
        <!--@Table bank_subjective-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="subject" column="subject" jdbcType="VARCHAR"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="referenceanswer" column="ReferenceAnswer" jdbcType="VARCHAR"/>
        <result property="teacherid" column="teacherid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, subject, title, ReferenceAnswer, teacherid
        from graduation.bank_subjective
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, subject, title, ReferenceAnswer, teacherid
        from graduation.bank_subjective
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, subject, title, ReferenceAnswer, teacherid
        from graduation.bank_subjective
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="subject != null and subject != ''">
                and subject = #{subject}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="referenceanswer != null and referenceanswer != ''">
                and ReferenceAnswer = #{referenceanswer}
            </if>
            <if test="teacherid != null">
                and teacherid = #{teacherid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into graduation.bank_subjective(subject, title, ReferenceAnswer)
        values (#{subject}, #{title}, #{referenceanswer})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update graduation.bank_subjective
        <set>
            <if test="subject != null and subject != ''">
                subject = #{subject},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="referenceanswer != null and referenceanswer != ''">
                ReferenceAnswer = #{referenceanswer},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from graduation.bank_subjective where id = #{id}
    </delete>

</mapper>